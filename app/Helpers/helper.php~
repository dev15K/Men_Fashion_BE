<?php

if (!function_exists('returnMessage')) {
    function returnMessage($type, $data, $message)
    {
        if ($type == -1) {
            $data = [
                'type' => 'success',
                'status' => 'error',
                'message' => 'Success',
                'data' => '',
            ];
        } else {
            $data = [

            ];
        }

        return $data;
    }
}
